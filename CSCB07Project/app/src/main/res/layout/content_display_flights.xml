<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:showIn="@layout/activity_display_flights">


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:onClick="toMain"
            android:text="@string/back_menu"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/edit_flight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:background="@android:color/holo_blue_dark"
            android:onClick="editFlight"
            android:text="@string/edit_flights"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </TableRow>

    <ListView
        android:id="@+id/allFlightsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:listSelector="@color/colourHighlighted" />

</LinearLayout>

